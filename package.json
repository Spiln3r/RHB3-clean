{
  "name": "rhb3",
  "version": "1.0.0",
  "description": "RHB3 Monitor - autogenerated installer config",
  "author": "RHB3", 
  "repository": {
    "type": "git",
    "url": "https://github.com/Spiln3r/RHB3.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder",
    "build": "npm run build:win",
    "build:win": "electron-builder --win --x64 --publish=never",
    "build:win:nsis": "electron-builder --win nsis --x64 --publish=never",
    "build:win:portable": "electron-builder --win portable --x64 --publish=never",
    "build:win:msi": "electron-builder --win msi --x64 --publish=never"
  },
  "build": {
    "appId": "com.rhb3.app",
    "productName": "RHB3",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md}"
    ],
    "win": {
      "icon": "icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "RHB3 Monitor"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Spiln3r",
        "repo": "RHB3"
      }
    ]
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^24.6.0"
  }
}